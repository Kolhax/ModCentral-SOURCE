<?xml version="1.0" encoding="utf-8"?>
<windows:About xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls" xmlns:resx="clr-namespace:StrikePackCfg.Properties" Window.Title="About" FrameworkElement.Width="450" FrameworkElement.Height="300" Control.BorderBrush="{DynamicResource AccentColorBrush}" Control.BorderThickness="1" Window.WindowStartupLocation="CenterOwner" xmlns:windows="clr-namespace:StrikePackCfg.Windows">
  <DockPanel Margin="10,10">
    <Button Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="{x:Static resx:UI.OkButtonText}" DockPanel.Dock="Bottom" IsCancel="True" />
    <StackPanel>
      <TextBlock FontSize="14" FontWeight="Bold" Text="{Binding AppNameVersion}" />
      <TextBlock Margin="0,14" Text="{x:Static resx:UI.TradeMarksText}" TextWrapping="Wrap" />
      <TextBlock>
        <Hyperlink NavigateUri="http://www.modpass.ca">
          <Run Text="{x:Static resx:UI.VisitStrikepackCom}" />
          <!--Unknown connection ID: 1-->
        </Hyperlink>
      </TextBlock>
    </StackPanel>
  </DockPanel>
</windows:About>