<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="StrikePackCfg.Views.SliderAdjustmentView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Name="Self" Margin="0,10" xmlns:views="clr-namespace:StrikePackCfg.Views;assembly=ModCentral">
  <StackPanel Orientation="Vertical">
    <DockPanel LastChildFill="True">
      <TextBlock DockPanel.Dock="Left" Text="{Binding Header, ElementName=Self}" />
      <TextBlock TextAlignment="Right" Text="{Binding ValueString, ElementName=Self}" />
    </DockPanel>
    <Slider Maximum="{Binding Maximum, ElementName=Self}" Minimum="{Binding Minimum, ElementName=Self}" Value="{Binding Value, ElementName=Self}" />
  </StackPanel>
</UserControl>